<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javaassignment2207063.Scene2Controller"
            prefWidth="600" prefHeight="400"
            stylesheets="@style.css">

    <!-- Top Section -->
    <top>
        <GridPane alignment="CENTER" style="-fx-padding: 15;">
            <Label text="GPA Result" style="-fx-font-size: 20px;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        </GridPane>
    </top>

    <!-- Center Section -->
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;">
            <TableView fx:id="table"
                       prefWidth="500"
                       prefHeight="280"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0">

                <columns>
                    <TableColumn fx:id="nameCol" text="Course Name" prefWidth="100"/>
                    <TableColumn fx:id="codeCol" text="Code" prefWidth="60"/>
                    <TableColumn fx:id="creditCol" text="Credit" prefWidth="60"/>
                    <TableColumn fx:id="t1Col" text="Teacher 1" prefWidth="100"/>
                    <TableColumn fx:id="t2Col" text="Teacher 2" prefWidth="100"/>
                    <TableColumn fx:id="gradeCol" text="Grade"/>
                </columns>

            </TableView>
        </GridPane>
    </center>

</BorderPane>
